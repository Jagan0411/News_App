<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="com.example.harish.news_app.MainActivity">

    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a query, then click Search"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/url_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="URL will be displayed here!"
        android:textSize="22sp"
        />

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/search_results_json"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textSize="18sp" />
    </ScrollView>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="22sp"
           android:id="@+id/error_message_display"
           android:padding="16dp"
           android:text="@string/error_msg"
           android:visibility="invisible"/>


       <ProgressBar
           android:layout_width="42dp"
           android:layout_height="42dp"
           android:id="@+id/pb_loading_indicator"
           android:layout_gravity="center"
           android:visibility="invisible"
           />

   </FrameLayout>

</LinearLayout>
